@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <table width="100%" class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Personagem</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>

        @{
            var cont = 0;

            for (int i = 0; i < ViewBag.limit; i++)
            {
                <tr class=".itemTecnico">
                    <td> @ViewBag.pId[i] </td>
                    <td> @ViewBag.pNome[i] </td>
                    <td> @ViewBag.pDesc[i] </td>
                </tr>

                cont++;
            }
        }

    </tbody>
</table>

</div>
